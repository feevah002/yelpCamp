<div class ="container-fluid">
  
   <div class= "row">
        <h1 style= "text-align: center">Create a New Campground</h1>
        <div class = "mid">
            <form action= "/campgrounds" method ="POST">
                <div class="mb-3">
                    <label for="name" class="form-label" >Name</label>
                    <input  placeholder= "name" name="name" type="text" class="form-control" id="name">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input  placeholder= "image url" name="image" type="text" class="form-control" id="image">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type ="textarea"  placeholder= "description" name="description" class="form-control" id="description">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price($/Night)</label>
                    <input  placeholder= "price($/Night)" name="price" type="number" class="form-control" id="price">
                </div>
                <button type="submit" class="btn btn-primary sub">Submit</button>
            </form>
            <p>
            <a class="" href = /campgrounds>Go Back</a>
            </p>
        </div>
   </div>
   





</div><!--container-->


